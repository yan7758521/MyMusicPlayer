<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/beijing_2" >

    <include
        android:id="@+id/common_actionbar"
        layout="@layout/include_action_bar" />

    <com.scu.mymusicplayer.view.ListBounceView
        android:id="@+id/MusicListView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/common_actionbar"
        android:cacheColorHint="#00000000" >
    </com.scu.mymusicplayer.view.ListBounceView>

    <TextView
        android:id="@+id/dialog"
        android:layout_width="80.0dip"
        android:layout_height="80.0dip"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:background="@drawable/v2_gallery_contacts_dialog_background"
        android:gravity="center"
        android:padding="5dip"
        android:textColor="@color/base_actionbar_bg"
        android:textSize="35.0dip"
        android:visibility="invisible" />

    <com.scu.mymusicplayer.view.MyLetterView
        android:id="@+id/right_letter"
        android:layout_width="25dip"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_below="@id/common_actionbar"
        android:background="@color/transparent" />

</RelativeLayout>